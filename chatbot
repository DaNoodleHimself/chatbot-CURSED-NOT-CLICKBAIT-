import random
import time
print("Welcome to this chatbox.Yeet")
greet = ["hello", "hi", "hola"]
greetR = ["hello citizen", "hello human", "GET OUT MY SWAMP"]
pun = ["you", "ur mom", "ur career"]
while True:
	ask = raw_input(">>>")
	if ask in greet:
		response = random.choice(greetR)
		print(response)
	elif ask == "tell me a joke":
		response = random.choice(pun)
		print(response)
	elif ask == "goodbye":
	 	print("Good.Get out my face")
		break
	elif ask == "something mean":
		print("yo mama is so fat, shes part of 2 time zones")
	elif ask == ("r u a bot"):
		print("NO U BRO")
	elif ask == ("download"):
